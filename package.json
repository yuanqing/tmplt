{
  "name": "tmplt",
  "version": "0.1.3",
  "description": "Minimal templating for JavaScript.",
  "author": "Lim Yuan Qing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/tmplt.git"
  },
  "main": "tmplt.js",
  "devDependencies": {
    "istanbul": "^0.4.0",
    "jshint": "^2.8.0",
    "minijasminenode2": "^1.0.0",
    "uglify-js": "^2.5.0"
  },
  "scripts": {
    "lint": "jshint --verbose tmplt.js test/*.js",
    "test": "rm -rf coverage && istanbul cover -- minijasminenode2 test/*.js --verbose",
    "dist": "browserify --standalone tmplt tmplt.js | uglifyjs --mangle --output tmplt.min.js",
    "build": "npm run lint && npm test && npm run dist"
  },
  "keywords": [
    "interpolate",
    "interpolation",
    "string",
    "template",
    "templating"
  ]
}
