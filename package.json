{
  "name": "tmplt",
  "version": "0.1.3",
  "description": "Minimal templating for JavaScript.",
  "author": "Lim Yuan Qing",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/yuanqing/tmplt.git"
  },
  "main": "tmplt.js",
  "devDependencies": {
    "istanbul": "^0.3.2",
    "jshint": "^2.5.10",
    "jshint-stylish": "^1.0.0",
    "minijasminenode2": "^1.0.0",
    "uglify-js": "^2.4.15"
  },
  "scripts": {
    "lint": "node_modules/.bin/jshint --reporter=node_modules/jshint-stylish/stylish.js --verbose tmplt.js test/*.spec.js",
    "test": "rm -rf coverage && node_modules/.bin/istanbul cover -- node_modules/.bin/minijasminenode2 test/*.spec.js --verbose",
    "dist": "node_modules/.bin/uglifyjs tmplt.js --mangle --output tmplt.min.js",
    "build": "npm run lint && npm test && npm run dist"
  },
  "keywords": [
    "interpolate",
    "interpolation",
    "string",
    "template",
    "templating"
  ]
}
